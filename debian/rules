#!/usr/bin/make -f
%:
    dh $@

override_dh_auto_install:
    dh_auto_install
    install -D -m 755 usr/local/bin/nsswitch_up.sh $(DESTDIR)/usr/local/bin/nsswitch_up.sh
    install -D -m 755 usr/local/bin/nsswitch_down.sh $(DESTDIR)/usr/local/bin/nsswitch_down.sh
    install -D -m 755 etc/NetworkManager/dispatcher.d/99-vpn-nsswitch.sh $(DESTDIR)/etc/NetworkManager/dispatcher.d/99-vpn-nsswitch.sh
    install -D -m 644 etc/nsswitch.d/nsswitch_up.conf $(DESTDIR)/etc/nsswitch.d/nsswitch_up.conf
    install -D -m 644 etc/nsswitch.d/nsswitch_down.conf $(DESTDIR)/etc/nsswitch.d/nsswitch_down.conf