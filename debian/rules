#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_make:
	make

override_dh_auto_install:
	dh_auto_install
	install -D -m 755 etc/nsswitch.d/nsswitch_up.sh $(DESTDIR)/etc/nsswitch.d/nsswitch_up.sh
	install -D -m 755 etc/nsswitch.d/nsswitch_down.sh $(DESTDIR)/etc/nsswitch.d/nsswitch_down.sh
	install -D -m 644 etc/nsswitch.d/nsswitch_up.conf $(DESTDIR)/etc/nsswitch.d/nsswitch_up.conf
	install -D -m 644 etc/nsswitch.d/nsswitch_down.conf $(DESTDIR)/etc/nsswitch.d/nsswitch_down.conf
	install -D -m 755 etc/NetworkManager/dispatcher.d/vpn-nsswitch-openvpn.sh $(DESTDIR)/etc/NetworkManager/dispatcher.d/vpn-nsswitch-openvpn.sh
	install -D -m 755 etc/NetworkManager/dispatcher.d/vpn-nsswitch-wireguard.sh $(DESTDIR)/etc/NetworkManager/dispatcher.d/vpn-nsswitch-wireguard.sh
	